{
  "name": "stream-option",
  "version": "0.1.0",
  "description": "Stream API for lazy iterable operations using Optional type",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Co0sh/stream-option.git"
  },
  "scripts": {
    "build": "tsc",
    "lint": "tslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts test/**/*.ts",
    "style": "prettier --list-different src/**/*.ts test/**/*.ts",
    "test": "jest",
    "coverage": "jest --coverage",
    "watch": "jest --watch"
  },
  "keywords": [
    "iterable",
    "array",
    "stream",
    "lazy",
    "optional",
    "option",
    "maybe",
    "monad"
  ],
  "author": "Jakub Sapalski <coosheck@gmail.com> (https://github.com/Co0sh)",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^23.3.2",
    "jest": "^23.6.0",
    "prettier": "^1.14.3",
    "ts-jest": "^23.10.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.test.ts"
    ]
  }
}
