{
  "name": "option-result",
  "version": "0.1.0",
  "description": "Simple and lightweight Option and Result types inspired by Rust",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Co0sh/option-result.git"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "prebuild": "npm run clean",
    "build": "tsc",
    "lint": "tslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts test/**/*.ts",
    "style": "prettier --list-different src/**/*.ts test/**/*.ts",
    "test": "jest",
    "coverage": "jest --coverage",
    "watch": "jest --watch",
    "prepublish": "npm run build",
    "preversion": "npm run style && npm run lint && npm run test",
    "postversion": "git push && git push --tags && npm publish"
  },
  "keywords": [
    "option",
    "result",
    "maybe",
    "monad",
    "enum",
    "rust"
  ],
  "author": "Jakub Sapalski <coosheck@gmail.com> (https://github.com/Co0sh)",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^23.3.2",
    "coveralls": "^3.0.2",
    "jest": "^23.6.0",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.test.ts"
    ]
  }
}
